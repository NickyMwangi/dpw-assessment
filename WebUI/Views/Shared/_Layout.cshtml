@{
    var activeMenu = ViewData["menu"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - DPW Nickson Assessment</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="#">
    <meta name="author" content="Nickson Mwangi - Software Developer">
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bundles/app.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Nickson Assessment</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Sales" asp-controller="OrderHeader" asp-action="Index">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="modal-holder">
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Nickson Assessment - Niclausel@gmail.com - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <partial name="_Config" />
    <script src="~/js/bundles/jquery.min.js"></script>
    <script src="~/js/bundles/layout.min.js"></script>
    <script src="~/js/bundles/modernizr.min.js"></script>
    <script src="~/js/bundles/table.min.js"></script>
    <script src="~/js/bundles/plugin.min.js"></script>
    <script src="~/lib/select-table/select-table.js"></script>
    <script src="~/js/bundles/i18next.min.js"></script>
    <script src="~/js/bundles/common.min.js"></script>
    @RenderSectionAsync("Scripts", required: false)

    @{
        var displayMsg = ViewData["alert"] ?? ViewData["alert"];
        if (displayMsg != null && !string.IsNullOrEmpty(displayMsg.ToString()))
        {
            <script>
                @Html.Raw(displayMsg)
            </script>
        }
    }
</body>
</html>

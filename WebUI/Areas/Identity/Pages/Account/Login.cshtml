@page
@model LoginModel

<div class="row justify-content-center">
    <div class="col-sm-4">
        <form id="account" method="post" class="md-float-material form-material">
            <div class="card p-3">
                <div class="card-block">
                    <div class="row m-b-20">
                        <div class="col-md-12">
                            <h3 class="text-center login-header">Sign In</h3>
                        </div>
                    </div>
                    <div class="form-group form-primary mb-2">
                        <input asp-for="Input.UserName" class="form-control" placeholder="Enter your username"
                               readonly onfocus="this.removeAttribute('readonly');"
                               onblur="this.setAttribute('readonly','readonly');" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        <span class="form-bar"></span>
                    </div>
                    <div class="form-group form-primary mb-2">
                        <input asp-for="Input.Password" class="form-control" placeholder="Password"
                               readonly onfocus="enablePass(this);"
                               onblur="this.setAttribute('readonly','readonly');" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <span class="form-bar"></span>
                    </div>

                    <div class="row mt-2 text-left">
                        <div class="col-12">
                            <div class="checkbox-fade fade-in-primary d-">
                                <label>
                                    <input asp-for="Input.RememberMe" />
                                    <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                                    <span class="text-inverse">Remember me</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20 login-button" data-submit="">Log in</button>
                        </div>
                    </div>

                    <hr />
                    <div class="row justify-content-between">
                        <div class="col-md-4">
                            <p class="text-inverse text-left">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" data-load="">
                                    <b class="f-w-600">Register</b>
                                </a>
                            </p>
                            <p class="text-inverse text-left">
                                <a class="nav-link text-dark f-w-600" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function enablePass(e) {
            var user = $("#Input_UserName").val();
            if (user != '' && user != 'undefined' && user != null) {
                e.removeAttribute('readonly');
            }
        }
    </script>
}


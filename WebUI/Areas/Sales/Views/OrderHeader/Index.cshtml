@model IEnumerable<OrderDto>
@{
    ViewData["Title"] = "Order Header";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-toolbar p-2">
                <a class="btn btn-outline-primary btn-sm btn-pure" asp-action="AddEdit"> <i class="fa fa-plus"></i>Add New</a>
            </div>
            <div class="card p-3 table-card">
                <div class="card-block">

                    <div class="table-responsive">
                        <table id="tblcoin" class="table table-edit" cellpadding="0" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Customer Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-nowrap">
                                                @Html.ValueFor(modelItem => item.No)
                                            </td>
                                            <td class="text-nowrap">
                                                @Html.ValueFor(modelItem => item.Type)
                                            </td>
                                            <td class="f-s-italic text-danger">
                                                @Html.ValueFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CustomerName)
                                            </td>
                                            <td class="text-left text-nowrap" style="width:25px">
                                                <a class="btn btn-outline-primary btn-sm btn-pure" asp-action="AddEdit" asp-route-id=@item.Id>Edit</a>
                                                <a class="btn btn-outline-danger btn-sm btn-pure" asp-action="AddEdit" asp-route-id=@item.Id>Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_TableFormatter" />
}

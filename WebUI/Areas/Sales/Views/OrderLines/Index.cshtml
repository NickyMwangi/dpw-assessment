@model IEnumerable<OrderLines>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-toolbar p-2">
                <a class="btn btn-outline-primary btn-sm btn-pure" asp-action="AddEdit"> <i class="fa fa-plus"></i>Add New</a>
            </div>
            <div class="table-responsive">
                <table id="tblcoin" class="table table-edit" cellpadding="0" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Line No.</th>
                            <th>Product Code</th>
                            <th>Product Type</th>
                            <th>Cost price</th>
                            <th>Sales price</th>
                            <th>Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-nowrap">
                                        @Html.ValueFor(modelItem => item.LineNo)
                                    </td>
                                    <td class="text-nowrap">
                                        @Html.ValueFor(modelItem => item.ProductCode)
                                    </td>
                                    <td class="text-nowrap">
                                        @Html.ValueFor(modelItem => item.ProductType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductCostPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductSalesPrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quantity)
                                    </td>
                                    <td class="text-left text-nowrap" style="width:25px">
                                        @Html.ValueFor(modelItem => item.LineNo)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_TableFormatter" />
}
